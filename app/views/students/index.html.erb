
 <div class="container">
  <h2>Arrray List Student</h2>
  <ul class="responsive-table">
    <li class="table-header">
      <div class="col col-1">Name Student</div>
      <div class="col col-2">Age</div>
      <div class="col col-3">Gender</div>
      <div class="col col-4">Created At</div>
      <div class="col col-5">Updated At</div>
      <div class="col col-6">Action</div>
    </li>
    <% @students.each do |student| %>
    <li class="table-row">
      <div class="col col-1" data-label="student name"><%= student.name %></div>
      <div class="col col-2" data-label="age"><%= student.age %></div>
      <div class="col col-3" data-label="gender"><%= student.gender %></div>
      <div class="col col-4" data-label="created at"><%= student.created_at %></div>
      <div class="col col-5" data-label="updated at"><%= student.updated_at %></div>
      <div class="col col-6" data-label="action">
        <a class="action" href="<%= student_path(student) %>">show</a>
        <a class="action" href="<%= edit_student_path(student) %>">update</a>
        <a class="action" style="color: #000"><%= link_to "delete", student_path(student),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %></a>
      </div>
    </li>
    <% end %>
  </ul>
</div>
</div>
<!-- /.container -->