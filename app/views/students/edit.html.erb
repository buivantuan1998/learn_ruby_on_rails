<div class="new-student">
    <h2>Edit Student</h1>

    <%= form_with model: @student do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% @student.errors.full_messages_for(:name).each do |message| %>
      <div> <%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :age %><br>
    <%= form.text_field :age %>
    <% @student.errors.full_messages_for(:age).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :gender %><br>
    <%= form.text_field :gender %>
  </div>
  
  <div>
    <%= form.submit %>
  </div>
<% end %>
</div>